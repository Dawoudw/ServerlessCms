@page "/articles"

<h3>Articles</h3>

<NavLink class="nav-link" href="newarticle">Create a New Article</NavLink>

@if (ArticleCollection == null)
{
  <h1>Loading...</h1>
}
else
{
  foreach (var article in ArticleCollection)
  {
    <h3>@article.Title</h3> <button type="button" @onclick="() => { OnEditButtonClick(article.Id); }" class="btn-primary">Edit</button>
  }
}
